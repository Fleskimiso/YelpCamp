<% layout("/layout/boilerplate") %> 
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">New Campground</a>
    </div>
    <% for (let camp of campgrounds) {%> 
       <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= camp.images.length>0 ? camp.images[0].url : 'https://source.unsplash.com/collection/483251?5936'%>" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %> 
                    </h5>
                    <p class="card-text"> <%= camp.description %> </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= camp.location %> 
                        </small>
                    </p>
                    <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">View <%= camp.title %>  </a>
                </div>
            </div>
        </div>
       </div>
    <% } %> 
